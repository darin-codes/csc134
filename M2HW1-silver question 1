#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    // Constants for cost and amount charged
    const double COST_PER_CUBIC_FOOT = 0.3;
    const double CHARGED_PER_CUBIC_FOOT = 0.52;

    // Variables
    double length, //the crate's length
           width,  //the crate's width
           height, //the crate's height
           volume, //the crate's volume
           cost,   //the cost to make the crate
           charge, //the customer charge for the crate
           profit; //the profit made from the crate
           
           // Set the desired output formatting for numbers.
    cout << setprecision(2) << fixed << showpoint;

    // Prompt the user for the crate's length, width, and height
    cout << "Enter the dimensions of the crate (in feet):\n";
    cout << "10: ";
    cin >> length;
    cout << "8: ";
    cin >> width;
    cout << "4: ";
    cin >> height;

    // Calculate the crate's volume,  the cost to produce it,
    // the charge to the customer, and the profit.
    volume = length * width * height;
    cost = volume * COST_PER_CUBIC_FOOT;
    charge = volume * CHARGED_PER_CUBIC_FOOT;
    profit = charge - cost;

    ?? Display the calculated data.
    cout << "The volume of the crate is ";
    cout << volume << " cubic feet.\n";
    cout << "Cost to build: $" << cost << endl;
    cout << "Charge to customer: $" << charge << endl;
    cout << "Profit: $" << profit << endl;
    return 0;
}





#include <iostream>

int main() {
    int numPizzas;
    int slicesPerPizza;
    int numVistors;
    int totalSlices;
    int slicesNeeded;
    int slicesLeftOver;

    std::cout << "Enter the number of pizzas: ";
    std::cin >> numPizzas;
    std::cout << "Enter the number of slices per pizza: ";
    std::cin >> slicesPerPizza;
    std::cout << "Enter the number of visitors: ";
    std::cin >> numVistors;
    totalSlices = numPizzas * slicesPerPizza;
    slicesNeeded = numVistors * 3;
    slicesLeftOver = totalSlices - slicesNeeded;
    cout << "The number of slices left over is: " << slicesLeftOver << std::endl;
    return 0;
}